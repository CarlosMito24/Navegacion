<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion.Gasolinera"
             Title="Gasolinera">
    
    <ScrollView>
        <VerticalStackLayout Margin="25, 25, 25, 25">
            <Image Source="gasolinera.jpg" WidthRequest="300"/>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">Introduzca el precio de la gasolina en litros:</Label>
            <Entry x:Name="PreciLitro" Placeholder="Precio por litro" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Entry>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">Introduzca la cantidad de galones que se han surtido:</Label>
            <Entry x:Name="Galones" Placeholder="Galones surtidos" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Entry>
            <Button x:Name="Button" Text="Calcular total a pagar" Clicked="ButtonClicked" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Button>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">El total a pagar por la gasolina, luego de haber convertido el precio de litros a galones es:</Label>
            <Entry x:Name="Total" Placeholder="Precio convertido de litros a galones" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style" IsEnabled="False"></Entry>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>