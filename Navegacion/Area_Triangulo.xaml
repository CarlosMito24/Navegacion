<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion.Area_Triangulo"
             Title="Area_Triangulo">

    <ScrollView>
        <VerticalStackLayout Margin="25, 25, 25, 25">
            <Image Source="triangulo.png" WidthRequest="300"/>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">Ingrese la altura del triángulo:</Label>
            <Entry x:Name="Altura" Placeholder="Altura del triángulo" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Entry>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">Ingrese la base del triángulo:</Label>
            <Entry x:Name="Base" Placeholder="Base del triángulo" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Entry>
            <Button x:Name="Button" Text="Calcular Área" Clicked="ButtonClicked" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style"></Button>
            <Label Margin="10, 10, 10, 10" FontFamily="Bookman Old Style">El área del triángulo es:</Label>
            <Entry x:Name="Área" Placeholder="Área del triángulo" Margin="10, 10, 10, 10" FontFamily="Bookman Old Style" IsEnabled="False"></Entry>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>